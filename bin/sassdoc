#!/usr/bin/env ruby
# The sassdoc command line utility

require File.expand_path(File.join(File.dirname(__FILE__), '..', 'lib', 'compass'))
require File.expand_path(File.join(File.dirname(__FILE__), '..', 'lib', 'sass_doc'))

parser = SassDoc::MixinParser.new(ARGV[0])
puts parser.parse!.to_plain_text
